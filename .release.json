{
  "verbose": true,
  "buildCommand": "npm run package-win && npm run package-linux",
  "pkgFiles": [
    "package.json",
    "app/package.json"
  ],
  "src": {
    "commitMessage": "Release %s-preview",
    "tagName": "v%s-preview",
    "githubAssets": [
      "release/*.rpm",
      "release/*.AppImage",
      "release/*.deb",
      "release/*.exe",
      "release/*.dmg"
    ]
  },
  "dist": {
    "baseDir": false
  },
  "npm": {
    "private": "true"
  },
  "github": {
    "release": true,
    "preRelease": true,
    "draft": true,
    "tokenRef": "GITHUB_TOKEN"
  }
}
